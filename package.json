{
  "name": "@team-numberone/daepiro-design-system",
  "version": "0.2.2",
  "description": "대피로 디자인 시스템 - React 컴포넌트 라이브러리",
  "private": false,
  "packageManager": "pnpm@10.25.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Team-NumberOne/daepiro-design-system.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": ["dist"],
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "vite",
    "build": "tsup",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "test-storybook --url http://localhost:6006",
    "test:storybook": "test-storybook",
    "icons:svg": "svgr --typescript --ext tsx --jsx-runtime automatic --filename-case pascal --out-dir src/icons/generated src/icons/svg",
    "icons:index": "node scripts/generate-icons-index.cjs",
    "icons": "pnpm icons:svg && pnpm icons:index",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "rm -rf dist",
    "deploy:storybook": "bash scripts/deploy-storybook.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.6",
    "@storybook/addon-links": "^10.1.6",
    "@storybook/react": "^10.1.6",
    "@storybook/react-vite": "^10.1.6",
    "@storybook/test-runner": "^0.24.2",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.23",
    "axe-playwright": "^2.2.2",
    "clsx": "^2.1.1",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "storybook": "^10.1.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
